{
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    
    // Disable terminal completely
    "terminal.integrated.enable": false,
    // Prevent debugger UI from launching
    "debug.openDebug": "neverOpen",
    // Prevent code runner extension (if installed) from doing anything
    "code-runner.runInTerminal": false,
    "code-runner.executorMap": {},
    "code-runner.enableAppInsights": false,
    // Disable automatic workspace trust
    "security.workspace.trust.enabled": true,
    "security.workspace.trust.untrustedFiles": "open",
    // Optional: prevent extension auto-updates here
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false
}